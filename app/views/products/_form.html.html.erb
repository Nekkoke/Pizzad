<%= form_with(model: @product, local: true) do |form| %>
  <div>
    <%= form.label :name, "商品名" %>
    <%= form.text_field :name %>
  </div>
  
  <div>
    <%= form.label :price, "価格" %>
    <%= form.number_field :price %>
  </div>
  
  <div>
    <%= form.label :images, "画像アップロード" %>
    <%= form.file_field :images, multiple: true %>
  </div>
  
  <div>
    <%= form.submit "保存" %>
  </div>
<% end %>
