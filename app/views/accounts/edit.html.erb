<% @page_title = "プロフィールの編集" %>

<h1><%= @page_title %></h1>

<%= form_for @customer, as: "account", url: :account do |form| %>
  <% if current_customer %>
   <%= render "shared/member_form", form: form %>
  <% end %>
  <% if current_employee %>
   <%= render "shared/employee_easy_form", form: form %>
  <% end %>
  <div><%= form.submit %></div>
<% end %>

