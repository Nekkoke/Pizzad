<table class="attr">

  <tr>
    <th>ユーザー名</th>
    <td><%= @customer.name %></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td><%= @customer.fullname %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.mail %></td>
  </tr>
  <tr>
    <th>誕生日</th>
    <td><%= @customer.birthed_on&.strftime("%Y年%m月%d日") %></td>
  </tr>
  <tr>
  <th>電話番号</th>
  <td><%= @customer.tel %></td>
</tr>
</table>