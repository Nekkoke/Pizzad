<% @page_title = "注文管理" %>
<h1><%= @page_title %></h1>

<%= form_tag :search_admin_orders, method: :get, class: "search" do %>
    <%= label_tag "q", "状態" %>
    <%= select_tag "q", options_for_select([
      ["指定なし", "指定なし"],
      ["prepare", "prepare"],
      ["arrived", "arrived"]
    ], selected: "指定なし"), include_blank: false %>
      <%= submit_tag "検索" %>
    <% end %>
    <br>

<% if @orders.present? %>
<br>
  <table class="list">
    <thead>
      <tr>
        <th>id</th>
        <th>小計</th>
        <th>店舗</th>
        <th>状態</th>
        <th>住所</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.price %></td>
          <td><%= order.store %></td>
          <td><%= order.state %></td>
          <td><%= order.address %></td>
         <td>
         <% if order.state == "prepare" %>
         <%= link_to "編集", [:edit, :admin, order] %> |
         <% end %>
         <%= link_to "削除", [:admin, order], method: :delete,
         data: { confirm: "本当に削除しますか?"} %>
       
      </td>
      <% end %>
    </tbody>
  </table>
  <%= paginate @orders %>
<% else %>
  <p>注文がありません。</p>
<% end %>