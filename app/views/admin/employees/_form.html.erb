<table class="attr">
  <tr>
    <th><%= form.label :name, "ユーザー名" %></th>
    <td><%= form.text_field :name %></td>
  </tr>
  <tr>
    <th><%= form.label :fullname, "氏名" %></th>
    <td><%= form.text_field :fullname %></td>
  </tr>
  <tr>
  <th><%= form.label :mail, "住所" %></th>
  <td><%= form.text_field :address %></td>
</tr>
  <tr>
    <th><%= form.label :mail, "メールアドレス" %></th>
    <td><%= form.text_field :mail %></td>
  </tr>
  <tr>
    <th><%= form.label :birthed_on, "誕生日",
              for: "customer_birthday_1i" %></th>
    <td><%= form.date_select :birthed_on,
              start_year: 1940, end_year: Time.current.year,
              use_month_numbers: true %></td>
  </tr>
  <tr>
  <th><%= form.label :mail, "電話番号" %></th>
  <td><%= form.text_field :tel %></td>
</tr>
  <tr>
    <th>管理者</th>
    <td>
      <%= form.check_box :admin %>
      <%= form.label :admin, "管理者" %>
    </td>
  </tr>
</table>
