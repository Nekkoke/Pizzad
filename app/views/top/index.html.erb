<h1>ログインフォーム</h1>
<% if flash.alert %><p class="alert"><%= flash.alert %></p><% end %>
<%= form_tag :session, id: "login-form" do %>
  <div>
    <label>ユーザー名：</label>
    <input type="text" name="name">
  </div>
  <div>
    <label>パスワード：</label>
    <input type="password" name="password">
  </div>
  <div>
  <br>
    <input type="submit" value="ログイン">
  </div>
<% end %>

